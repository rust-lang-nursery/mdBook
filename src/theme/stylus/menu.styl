.menu-bar {
    position: sticky
    top: 0
    display: flex
    flex-wrap: wrap

    i, .icon-button {
        position: relative
        margin: 0 10px
        z-index: 10
        line-height: 50px

        transition: color 0.5s

        &:hover { cursor: pointer }
    }
}

.menu-title {
    display: inline-block
    font-weight: 200
    font-size: 20px
    line-height: 50px
    text-align: center
    margin: 0
    flex: 1
    white-space: nowrap
    overflow: hidden
    text-overflow: ellipsis

    opacity: 0
    transition: opacity 0.5s ease-in-out
}

.menu-bar:hover .menu-title {
    opacity: 1
}
