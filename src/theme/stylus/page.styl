@require 'variables'

.page-wrapper {
    box-sizing: border-box
    left: 0
    position: absolute
    right: 0
    top: 0
    bottom: 0

    // Animation: slide away
    transition: padding-left 0.5s, margin-left 0.5s, left 0.5s
}

.sidebar-visible .page-wrapper {
    left: $sidebar-width
}

.page {
    outline: 0
    padding: 0 $page-padding
}

.content {
    position: relative
    top: 0
    bottom: 0
    overflow-y: auto
    right: 0
    left: 0
    padding: 0 15px
    padding-bottom: 50px

    main {
        margin-left: auto
        margin-right: auto
        max-width: $content-max-width
    }

    a {
        text-decoration: none;
        &:hover { text-decoration: underline; }
    }

    img { max-width: 100%; }
}

.sidebar-visible .content {
    position: absolute
    top: 52px
}
